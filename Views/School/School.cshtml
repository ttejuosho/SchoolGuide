@model SchoolGuide.School
@{
    ViewData["Title"] = "View School";
    var schoolImage = "~/img/" + (@Model.ProfileImagePath != null ? @Model.ProfileImagePath : "150X240.png");
}

<div class="jumbotron">
    <h1 class="text-center display-4">@Model.SchoolName</h1>
</div>

<div class="row justify-content-center">
    <div class="col-10">
        <div class="card mb-3">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="@schoolImage" class="card-img" alt="School Image" asp-append-version="true">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <a class="btn btn-sm btn-warning" href="~/School/Edit/@Model.SchoolId" role="button" style="position: absolute;right: 5em;bottom: 30.5em;">Edit</a>
                        <a class="btn btn-sm btn-danger text-white" onclick="activateModal(@Model.SchoolId, '@Model.SchoolName')" role="button" style="position: absolute;right: 0.3em;bottom: 30.5em; cursor: pointer;">Delete</a>
                        <p class="card-text"><span class="font-weight-bold">Address</span>: @Model.SchoolAddress @Model.SchoolCity @Model.SchoolState</p>
                        <p class="card-text"><span class="font-weight-bold">Phone 1</span>: @Model.SchoolPhone</p>
                        <p class="card-text"><span class="font-weight-bold">Phone 2</span>: @Model.SchoolPhone2</p>
                        <p class="card-text"><span class="font-weight-bold">Email Address</span>: @Model.SchoolEmail</p>
                        <p class="card-text"><span class="font-weight-bold">www</span>: @Model.SchoolWeb</p>
                        <p class="card-text"><span class="font-weight-bold">Principal Name</span>: @Model.PrincipalName</p>
                        <p class="card-text"><span class="font-weight-bold">Founded</span>: @Model.YearFounded</p>
                        <p class="card-text"><span class="font-weight-bold">Student Count</span>: @Model.NumberOfStudents</p>
                        <p class="card-text"><span class="font-weight-bold">Teacher Count</span>: @Model.NumberOfTeachers</p>
                        <p class="card-text"><span class="font-weight-bold">Number of Campuses</span>: @Model.NumberOfCampuses</p>
                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="confirmDeleteModalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this school ? Data cannot be recovered.
            </div>
            <div class="modal-footer">
                <a id="deleteSchoolBtn" class="btn btn-sm btn-danger text-white" href="" role="button">Delete</a>
                <button type="button" class="btn btn-sm btn-warning" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript"></script>
}