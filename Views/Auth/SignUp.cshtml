@model SignupModel

@{
    ViewData["Title"] = "SignUp";
}

<div class="row justify-content-center">
    <div class="col-6">
        @using (@Html.BeginForm("SignUp", "Auth", FormMethod.Post, new { enctype = "multipart/form-data", @id = "signupForm", @class = "signup" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group row mb-3">
                <h2 class="text-info">Sign Up</h2>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row mb-2">
                <label asp-for="Email" class="required"></label>
                <input asp-for="Email" class="form-control border-info" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="Password" class="required"></label>
                <input asp-for="Password" class="form-control border-info" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="ConfirmPassword" class="required"></label>
                <input asp-for="ConfirmPassword" class="form-control border-info" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-end">
                <button type="submit" class="btn btn-outline-info" id="signupBtn">Sign Up</button>
            </div>
        }
    </div>
</div>



